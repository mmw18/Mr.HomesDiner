{
  "compilerOptions": {
    "target": "esnext", // Modern JavaScript target
    "module": "esnext", // ESNext module system
    "baseUrl": "./", // Base directory for module resolution
    "moduleResolution": "node", // Resolve modules like Node.js
    "paths": {
      "@/*": [
        "src/*" // Alias "@" to the "src" folder
      ]
    },
    "lib": [
      "esnext", // Include modern ECMAScript features
      "dom", // Browser DOM APIs
      "dom.iterable", // DOM iteration APIs
      "scripthost" // Scripting host APIs
    ]
  }
}
